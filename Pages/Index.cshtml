@page
@model MY_Blog.Pages.IndexModel
@using MY_Blog.Models

@{
    ViewData["Title"] = "Ana Sayfa";
}

<h2>Blog Yazıları</h2>

<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Tarih</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model.BlogPosts) // Burayı güncelledik
        {
            <tr>
                <td>
                    <a asp-page="/Detail" asp-route-id="@post.Id">@post.Title</a>
                </td>
                <td>@post.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-page="/Admin/Edit" asp-route-id="@post.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-page="/Admin/Delete" asp-route-id="@post.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="/Admin/Create" class="btn btn-success">Yeni Yazı Ekle</a>
